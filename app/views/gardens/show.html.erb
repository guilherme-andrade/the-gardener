<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
	<div class="row mt-4">
		<% @garden.plants.each do |plant| %>
			<div class="col-4 my-2">
				<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
				  <%= plant.name %>

				  <%= link_to plant_path(plant), method: :delete, class: 'btn btn-danger card-button' do %>
						<i class="fas fa-trash"></i>
				  <% end %>
				</div>
				<%= link_to 'See Plant', plant_path(plant), class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>

	<div class="row justify-content-center my-5">
		<div class="col-6 p-5 rounded border bg-white">
			<%= simple_form_for [@garden, @plant] do |f| %>
				<%= f.input :name %>
				<%= f.input :image_url %>
				<%= f.submit 'Save Plant', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>